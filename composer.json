{
    "name": "ucms/token-sdk-php",
    "description": "ucms 系统令牌生成",
    "type": "library",
    "license": "Apache-2.0",
    "homepage": "https://github.com/bojian-li/ucms-token-sdk",
    "keywords": [
        "ucms-token",
        "sdk"
    ],
    "authors": [
        {
            "name": "bojian.li",
            "email": "bojian.li@foxmail.com"
        }
    ],
    "minimum-stability": "dev",

    "require": {
        "php": ">=7.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },

    "autoload": {
        "psr-4": {
            "\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },

    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text",
        "travis": [
            "composer phploc",
            "composer phpstan"
        ]
    }
}
